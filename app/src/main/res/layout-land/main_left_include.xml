<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/gray_alpha_30p"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@mipmap/app_icon" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/default_extra_large_text_size"
            android:textStyle="bold"
            tools:text="홍길동" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="체     중"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_weight"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="92kg"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="허리둘레"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_waist"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="102cm"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BMI"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_bmi"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="112"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="혈압"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_pulse"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="70-125"
                android:textColor="@color/black"
                android:textSize="@dimen/default_large_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/user_healthy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn_navy"
            android:text="신체정보관리"
            android:textColor="@color/white"
            android:textSize="@dimen/default_large_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/user_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_btn_navy"
            android:text="건강컨텐츠"
            android:textColor="@color/white"
            android:textSize="@dimen/default_large_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/user_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_btn_navy"
            android:text="히스토리"
            android:textColor="@color/white"
            android:textSize="@dimen/default_large_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/user_analyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_btn_accent"
            android:text="분석시작"
            android:textColor="@color/white"
            android:textSize="@dimen/default_large_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>